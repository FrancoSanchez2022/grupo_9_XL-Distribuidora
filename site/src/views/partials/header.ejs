<header>
    <div class="top">
        <a href="/">
            <div class="Logo"><img src="/img/Logo-XL-sinFondo.png" alt="logo XL Distribuidora"></div>
        </a>
        <div class="form-search">
            <form class="formulario" action="/busqueda" method="get">
                <input type="text" name="search" id="search" class="barraDeBusqueda" maxlength="100"
                    placeholder="Busca tu producto">
                <button type="submit" class="lupa"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>

    <div class="burger">
        <input type="checkbox" name="burger" id="burger" checked>
        <label for="burger"><i class="fas fa-bars"></i></label>
        <nav>
            <ul class="menu">
                <li><a href="/">Inicio</a></li>
                <li><a href="/products/listProducts">Nuestros Productos</a></li>
                <li><a href="/#somos">Quienes Somos</a></li>
                <li><a href="/#contacto">Contacto</a></li>
            </ul>
            <ul class="user">
                <% if (locals.userLogin && locals.userLogin.rol=== 1 ) { %>
                    <li><a href="/admin/list">Admin</a></li>
                    <% } %>
                        <% if (locals.userLogin) { %>
                            <li><a href="/users/profile">Â¡Hola <%= locals.userLogin.nombre %>! </a></li>
                            <% } else { %>
                                <li><a href="/users/login">Login</a></li>
                                <li><a href="/users/register">Registro</a></li>
                            <% } %>

                    <li class="carritoli"><a href="/products/cart"><i class="fas fa-shopping-cart"></i></a></li>
            </ul>
        </nav>
    </div>
    <div class="carrito"><a href="/products/cart"><i class="fas fa-shopping-cart"></i></a></div>
</header>