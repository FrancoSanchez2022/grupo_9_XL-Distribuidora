<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{title:'XL - Detalle de Producto'}) %>

    <body class="detalle">
        <%- include('./partials/header') %>
            <main class="mainDetalle">
                <%- include('./partials/breadcrumbs',{másSecciones:null,página:'Detalle de Producto'}) %>
                    <section class="productito">
                       <div class="producto">
                            <div class="imagen">
                             <img src="/img/productos/<%= producto.imagenes[0].nombre %>" alt="Imagen producto">
                            </div>
                            <div class="contenido">
                                <h2 class="nombreD"><%= producto.nombre %> </h2>
                                <span class="descripcionC"><%= producto.descripcion %></span>
                                <p class="subprecioC">$ <%= producto.precio %> </p>
                                <button class="subcarrito" onclick="addItem('<%= producto.id %>')">Agregar al carrito</button>
                            </div>
                       </div>
                    </div>
                </section>
                <section class="relacionado">
                    <div class="comprando">
                        <a href=""><i class="fas fa-ban"></i></a>
                        <a href="">Seguir comprando</a>
                    </div>
                    <h3 class="tituloRelacionado">Productos relacionados</h3>
                    <div class="cajaRelacionada">
                        <% productos.forEach(producto => { %> 
                                <article>
                                    <div class="contenedorRelacionado">
                                        <img src="/img/productos/<%= producto.imagenes[0].nombre %> " alt="">
                                    </div>
                                    <h4 class="subproductos">
                                        <%= producto.nombre %>
                                    </h4>
                                    <p class="subprecio">$ <%= producto.precio %>
                                    </p>
                                    <button class="subcarrito" onclick="addItem('<%= producto.id %>')">Agregar al carrito</button>
                                </article>
                                <% }) %>

                        </div>
                    </section>
            </main>
            <%- include('./partials/footer') %>
                <script src="/javascripts/increase.js"></script>
                <script src="/javascripts/carrito.js"></script>
            </body>

</html>